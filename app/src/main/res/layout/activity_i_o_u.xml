<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".ActivityLoan_v2">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="318dp"
        android:background="@drawable/style_lightgray2"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:tint="#fff"
                app:srcCompat="@drawable/bt_left" />

            <TextView
                android:id="@+id/templete_loan_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/youome_main_font"
                android:text="내용 수정"
                android:textColor="#fff"
                android:textSize="17dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/style_whitenstroke"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bt_sign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.825"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.756">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="35dp"
            android:fontFamily="@font/youome_main_font"
            android:gravity="center"
            android:text="차용증"
            android:textColor="#000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/youome_main_font"
            android:gravity="center"
            android:text="차용인은 2020.03.30."
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/youome_main_font"
            android:gravity="center"
            android:text="대여인으로부터 금 500,000원을"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/youome_main_font"
            android:gravity="center"
            android:text="변제기일을 2020.08.31로,"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/youome_main_font"
            android:gravity="center"
            android:text="이자를 연 10%로 정하여"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/youome_main_font"
            android:gravity="center"
            android:text="차용한 사실이 있음을 확인합니다."
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/youome_main_font"
            android:gravity="right"
            android:text="2020.03.30."
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView37"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/youome_main_font"
            android:gravity="right"
            android:text="대여인 유오미 (인)"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView38"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/youome_main_font"
            android:gravity="right"
            android:text="차용인 김오미 (인)"
            android:textColor="#000"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/bt_style_lightgray"
        android:fontFamily="@font/youome_main_font"
        android:backgroundTint="@color/youome_blue"
        android:layout_marginBottom="40dp"
        android:paddingVertical="10dp"
        android:textSize="20dp"
        android:text="서명하기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>