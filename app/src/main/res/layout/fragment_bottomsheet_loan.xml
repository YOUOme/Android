<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view_lend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@drawable/fragment_style1"
        android:backgroundTint="@color/youome_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleX="1.3"
                    android:scaleY="1.3"
                    android:layout_gravity="center_vertical"
                    android:tint="@color/youome_subColor"
                    app:srcCompat="@drawable/bt_down" />

                <TextView
                    android:id="@+id/lend_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="25dp"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:fontFamily="@font/youome_main_font"
                    android:textColor="@color/youome_subColor"
                    android:text="김오미" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:fontFamily="@font/youome_main_font"
                    android:textColor="@color/youome_subColor"
                    android:text="에게 빌려주기" />

            </LinearLayout>

            <TextView
                android:id="@+id/lend_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/youome_subColor"
                android:gravity="center"
                android:textSize="40dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/youome_main_font"
                android:text="500,000 원" />

            <SeekBar
                android:id="@+id/seekBar"
                android:progress="50"
                android:scaleY="1.2"
                android:scaleX="1.2"
                android:progressBackgroundTint="@color/youome_subColor"
                android:progressTint="@color/youome_lightblue"
                android:thumbTint="#fff"
                android:layout_marginBottom="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/youome_lightblue"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_marginBottom="45dp"
                android:fontFamily="@font/youome_main_font"
                android:text="OMYPAY 잔액      1,000,000원" />

            <TextView
                android:id="@+id/textView57"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:textSize="12dp"
                android:gravity="center"
                android:textColor="#ddd"
                android:fontFamily="@font/youome_main_font"
                android:text="빌려줄 금액을 설정하세요. 부족한 금액은 자동충전됩니다." />

            <Button
                android:id="@+id/bt_setlend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="30dp"
                android:textSize="19dp"
                android:background="@drawable/style_lightgray1"
                android:backgroundTint="@color/youome_lightblue"
                android:textColor="#fff"
                android:fontFamily="@font/youome_main_font"
                android:text="확인" />

        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>


</androidx.constraintlayout.widget.ConstraintLayout>