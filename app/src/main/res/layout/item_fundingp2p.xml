<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bt_style_lightgray"
    android:padding="10dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:background="@drawable/style_lightgray1"
        android:backgroundTint="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="10dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView53"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="연 이자율"
                android:textSize="15dp"
                android:layout_marginVertical="3dp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/textView51"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18dp"
                android:text="16 %"
                android:layout_marginVertical="3dp"
                android:textColor="@color/youome_blue" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView56"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000"
            android:text=" " />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView47"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="상환기간"
                android:textSize="15dp"
                android:layout_marginVertical="3dp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/textView49"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="5개월"
                android:textSize="18dp"
                android:layout_marginVertical="3dp"
                android:textColor="@color/youome_blue" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView55"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000"
            android:text=" " />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_marginVertical="3dp"
                android:text="모집액" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/youome_red"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_marginVertical="3dp"
                android:text="300,000원" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView54"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:textColor="@color/youome_blue"
        android:text="현재 100,000원 투자 완료" />

    <TextView
        android:id="@+id/button"
        android:background="@drawable/style_lightgray1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/youome_blue"
        android:layout_margin="5dp"
        android:gravity="center"
        android:paddingVertical="5dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="자세히보기" />
</LinearLayout>