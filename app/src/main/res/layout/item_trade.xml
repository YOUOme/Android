<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#fff"
    android:paddingVertical="9dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/tx_type"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginRight="5dp"
        android:textColor="@color/youome_red"
        android:layout_gravity="center_vertical"
        android:textSize="16dp"
        android:text="빌린돈" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:textColor="#000"
        android:textSize="21dp"
        android:text="[이름]" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="[기한]"
            android:textSize="11dp"
            android:textColor="#000" />

        <TextView
            android:id="@+id/item_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="[상환 받을 돈]"
            android:textSize="11dp"
            android:textColor="#000" />
    </LinearLayout>

    <ImageView
        android:id="@+id/bt_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/bt_style_lightgray2"
        android:backgroundTint="@color/youome_red"
        android:gravity="right"
        android:paddingHorizontal="17dp"
        android:paddingVertical="10dp"
        android:tint="#000"
        app:srcCompat="@drawable/bt_right" />

</LinearLayout>